<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/words" method="POST" class="mb-4">
    <div class="form-group">
        <label for="wordeng">단어</label>
        <input type="text" name="wordeng" class="form-control">
    </div>
    <div class="form-group">
        <label for="wordkor">단어뜻</label>
        <input type="text" name="wordkor" class="form-control">
    </div>
    <input type="submit" value="add word" class="btn btn-primary btn-bblock">
</form>
<h4>단어목록</h4>
<ul class="list-group">
    {{#each words}}
        <li class="list-group-item">{{this.wordeng}} : {{this.wordkor}}</li>
    {{/each}}
</ul>